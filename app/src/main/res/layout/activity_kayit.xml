<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kayit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suleyman.parkyerikiralama.KayitActivity"
    android:orientation="vertical"
    android:weightSum="11">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tc Numarası"
        android:id="@+id/edtKayit_tc"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ad"
        android:id="@+id/edtKayit_ad"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Soyad"
        android:id="@+id/edtKayit_soyad"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E Mail"
        android:id="@+id/edtKayit_email"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Adres"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/edtKayit_adres"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adı"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/edtKayit_kullaniciAdi"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/edtKayit_sifre"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifreyi Tekrar Giriniz"
        android:textAlignment="center"
        android:textColorHint="#034fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/edtKayit_sifre2"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Araç Plaka"
        android:textAlignment="center"
        android:textColorHint="#032fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/edtKayit_plaka"
        android:layout_weight="1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefon Numarası"
        android:textAlignment="center"
        android:textColorHint="#032fac"
        android:textColor="#000"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:id="@+id/edtKayit_telNo"
        android:layout_weight="1"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:background="@drawable/custom_button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="kaydet"/>

</LinearLayout>
